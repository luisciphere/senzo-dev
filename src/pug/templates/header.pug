                span Microsoft 
              .location-dropdown-root
                ul 
                  li
                    a(href="#") Manchester
                  li
                    a(href="#") Glasgow  
                    ul
                      li
                        a(href="#").all-item All Locations
                      li
                        a(href="#") Office 1
                        ul
                          li
                            a(href="#").all-item All Locations
                          li 
                            a(href="#") Department 1
                          li
                            a(href="#") Department 2    
          .col-xs-4
            .header-logo
              img(src="assets/images/header-logo.svg", alt="SenzoLive")     
          .col-xs-4
            .user-block.clearfix
              .user-icon.pull-right
                img(src="assets/images/user-settings.svg", alt="Settings") 
              .user-name.pull-right
                span John Doe
              .settings-dropdown-root
                ul 
                  li
                    a(href="#") Own Account
