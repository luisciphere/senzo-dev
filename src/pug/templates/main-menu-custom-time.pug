mixin menubtn(name)
  li
    a.button(href="#") 
      span= name  
      
.main-menu              
  .container-fluid 
    .row    
      .col-md-12
        .main-menu-left.pull-left
          a.button.active(href="#") 
            i.fa.fa-home(aria-hidden="true")
            span  Overview   
          a.button(href="#") 
            i.fa.fa-bar-chart(aria-hidden="true")
            span  Comparison  
        .main-menu-time.pull-right
          ul  
            +menubtn("Today")
            +menubtn("This Week")
            +menubtn("This Month")
            +menubtn("This Year")
            li.datepicker-parent
              a.button.active.custom-time(href="#")
                span Custom
              .datepicker
                input(type="text" placeholder="01.01.2017").start-date.pull-left
                .date-divider.pull-left -
                input(type="text" placeholder="01.10.2017").end-date.pull-left
                .datepicker-circle
                a.timepicker-icon.pull-left
                  img(src="assets/images/icon-clock.svg")  
                    
                      
