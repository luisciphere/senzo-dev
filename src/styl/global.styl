body
  background #F6F7F9
  font-family rob
  color textgrey
  padding-bottom 80px

h1, h2, h3, h4, h5, h6
  font-family 'Roboto'
  margin 0
  padding 0

a:hover, a:focus, a:active
  text-decoration none
  color bgrey

.button
  font-family cat
  font-size 16px
  line-height 26px
  color bgrey
  border 1px solid #979797
  border-radius 7px
  padding 4px 10px 2px 10px
  display block
  float left
  text-align center
  transition all 0.3s

.button-sm
  font-family cat
  font-size 16px
  line-height 20px
  color bgrey
  border 1px solid #979797
  border-radius 7px
  padding 4px 10px 2px
  text-align center
  transition all 0.3s
  display block


.button:hover, .button-sm:hover {
  color bgreen
  border 1px solid bgreen
  transition all 0.3s
}

.button.active
  background bgreen
  border 1px solid bgreen
  color #fff

.dropdown
  background #fff
  border-top 3px solid bgreen
  box-shadow 0px 2px 3px 0px rgba(210, 210, 210, 0.5)
  padding 10px 10px
  position absolute
  width 100%
  top 25px
  z-index 9999

.dropdown ul
  list-style-type none
  padding 0
  margin 0
  font-size 14px

.dropdown ul li
  margin-bottom 3px

.dropdown a
  color textgrey

.all-areas a
  color #959AA2

.stats-area-dropdown
  top 30px
